#include<stdio.h>
int i.data[10].dl.gen[10],gl,temp[10],c;
void left_shift()
{
for(i=0;i<gl-1;i++)
temp(i)=temp[i+1];
if(c<d1)
temp[gl-1]=data[c];
else
temp[gl-1]=0
}
void xor()
{
if(temp[0]==0
{
left_shift();
c++;
for(i=0;i<gl;i++)
{
if(gen(i)==temp(i)
temp(i)=0
else
temp[i]=1;
}
}
int main()
{
int j;
printf("1.generate2.check\nchoice:");
